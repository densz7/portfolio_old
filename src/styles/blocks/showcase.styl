.showcase
    row-flex()
    justify-content(center)

    &__item
        col()
        col-4()
        col-md-8()
        col-xs-12()
        margin-bottom 45px
        position relative
        cursor pointer

        &::before
            content attr(data-title)
            position absolute
            left 0
            right 0
            margin-top 55px
            font-size 2em
            color #fff
            text-transform uppercase
            opacity 0
            z-index 10
            transition all .35s ease
        
         &::after
            content '\f06e'
            font-family 'Font Awesome'
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            justify-content center
            align-items center
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            width 100%
            font-size 3.750em
            color #fff
            background-color rgba(#4b4f6d, .75)
            opacity 0
            transition all .35s ease

        &:hover
            &::before
            &::after
                opacity 1
        
    &__img
        width 100%
        height 100%
            


           